<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinDash2.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="24">
            <StackPanel Spacing="8">
                <Grid>
                    <Button Content="â† Back" Click="BackButton_Click" HorizontalAlignment="Left"/>
                    <TextBlock 
                        Text="Settings" 
                        FontSize="24" 
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>
                
                <TextBlock 
                    Text="Configure your widget experience"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Widget Dragging" 
                    FontSize="18" 
                    FontWeight="SemiBold"/>
                
                <StackPanel Spacing="16" Margin="0,8,0,0">
                    <RadioButton 
                        x:Name="FreeDragRadioButton"
                        Content="Free Drag"
                        GroupName="DragMode"
                        Checked="OnDragModeChanged">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="Free Drag" FontWeight="SemiBold"/>
                                    <TextBlock 
                                        Text="Move widgets freely without any snapping"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        TextWrapping="Wrap"
                                        Margin="0,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton 
                        x:Name="GridBasedRadioButton"
                        Content="Grid-Based"
                        GroupName="DragMode"
                        Checked="OnDragModeChanged">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="Grid-Based" FontWeight="SemiBold"/>
                                    <TextBlock 
                                        Text="Snap widgets to a grid for precise alignment"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        TextWrapping="Wrap"
                                        Margin="0,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Grid Size" 
                    FontSize="18" 
                    FontWeight="SemiBold"/>
                
                <StackPanel Spacing="8" Margin="0,8,0,0">
                    <NumberBox 
                        x:Name="GridSizeNumberBox"
                        Header="Cell Size (pixels)"
                        SpinButtonPlacementMode="Inline"
                        Minimum="10"
                        Maximum="500"
                        SmallChange="10"
                        LargeChange="50"
                        ValueChanged="OnGridSizeChanged"/>
                    <TextBlock 
                        Text="Size of each grid cell for snapping widgets"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
