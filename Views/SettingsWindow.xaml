<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinDash2.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Settings" 
            Style="{StaticResource TitleTextBlockStyle}"
            Margin="40,40,40,20"/>

        <ScrollViewer Grid.Row="1" Margin="40,0,40,40">
            <StackPanel Spacing="24">
                <StackPanel Spacing="8">
                    <TextBlock 
                        Text="Widget Dragging" 
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <StackPanel Spacing="16" Margin="0,8,0,0">
                        <RadioButton 
                            x:Name="FreeDragRadioButton"
                            Content="Free Drag"
                            GroupName="DragMode"
                            Checked="OnDragModeChanged">
                            <RadioButton.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="Free Drag" FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Text="Move widgets freely without any snapping"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            TextWrapping="Wrap"
                                            Margin="0,4,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </RadioButton.ContentTemplate>
                        </RadioButton>

                        <RadioButton 
                            x:Name="GridBasedRadioButton"
                            Content="Grid-Based"
                            GroupName="DragMode"
                            Checked="OnDragModeChanged">
                            <RadioButton.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="Grid-Based" FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Text="Snap widgets to a 50px grid for precise alignment"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            TextWrapping="Wrap"
                                            Margin="0,4,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </RadioButton.ContentTemplate>
                        </RadioButton>
                    </StackPanel>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock 
                        Text="Grid Size" 
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <StackPanel Spacing="8" Margin="0,8,0,0">
                        <NumberBox 
                            x:Name="GridSizeNumberBox"
                            Header="Cell Size (pixels)"
                            SpinButtonPlacementMode="Inline"
                            Minimum="10"
                            Maximum="500"
                            SmallChange="10"
                            LargeChange="50"
                            ValueChanged="OnGridSizeChanged"/>
                        <TextBlock 
                            Text="Size of each grid cell for snapping widgets"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
