<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinDash2.Views.WidgetLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinDash2.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinDash2.Models"
    xmlns:tableView="using:WinUI.TableView">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with logo and buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Left">
                <Image Source="/Assets/logo96x96.png" Width="32" Height="32" VerticalAlignment="Center"/>
                <TextBlock Text="Widget Library" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                <Button Click="CreateButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="Create New Widget"/>
                    </StackPanel>
                </Button>
                <Button Click="SettingsButton_Click" ToolTipService.ToolTip="Settings">
                    <FontIcon Glyph="&#xE713;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Search box -->
        <TextBox Grid.Row="1" PlaceholderText="Search widgets..." Margin="0,0,0,16" TextChanged="SearchBox_TextChanged"/>
        
        <!-- Table takes remaining space -->
        <tableView:TableView
            Grid.Row="2"
            ItemsSource="{x:Bind FilteredWidgets}"
            AutoGenerateColumns="False"
            SelectionMode="None"
            CanResizeColumns="False"
            CanSortColumns="True">

            <tableView:TableView.Columns>
                <tableView:TableViewTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                <tableView:TableViewTemplateColumn Header="Enabled" Width="90">
                    <tableView:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:Widget">
                            <Grid HorizontalAlignment="Stretch">
                                <ToggleSwitch 
                                    IsOn="{x:Bind Enabled, Mode=TwoWay}" 
                                    Toggled="ToggleSwitch_Toggled"
                                    OnContent=""
                                    OffContent=""
                                    HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.CellTemplate>
                </tableView:TableViewTemplateColumn>
                <tableView:TableViewTemplateColumn Header="Actions" Width="90">
                    <tableView:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:Widget">
                            <Grid HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                                    <Button Click="EditButton_Click" ToolTipService.ToolTip="Edit Widget" Padding="8">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                    </Button>
                                    <Button Click="DeleteButton_Click" 
                                            ToolTipService.ToolTip="Delete Widget"
                                            Padding="8">
                                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#E74856"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.CellTemplate>
                </tableView:TableViewTemplateColumn>
            </tableView:TableView.Columns>
        </tableView:TableView>
    </Grid>
</Page>
